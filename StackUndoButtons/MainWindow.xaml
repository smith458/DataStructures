<Window x:Class="StackUndoButtons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackUndoButtons"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="1" HorizontalAlignment="Left" Margin="25,30,0,0" VerticalAlignment="Top" Width="75" Height="250" Background="#FFFF0000" Click="button_Click"/>
        <Button x:Name="button1" Content="2" HorizontalAlignment="Left" Margin="125,30,0,0" VerticalAlignment="Top" Width="75" Height="250" Background="#FFFF0000" Click="button1_Click"/>
        <Button x:Name="button2" Content="3" HorizontalAlignment="Left" Margin="225,30,0,0" VerticalAlignment="Top" Width="75" Height="250" Background="#FFFF0000" Click="button2_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Margin="325,30,0,0" VerticalAlignment="Top" Width="150" Height="200"/>
        <Button x:Name="button3" Content="Undo" HorizontalAlignment="Left" Margin="360,250,0,0" VerticalAlignment="Top" Width="75" Click="button3_Click"/>
    </Grid>
</Window>
